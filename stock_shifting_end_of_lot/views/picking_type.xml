<?xml version="1.0"?>
<odoo>

    <record id="view_picking_type_form" model="ir.ui.view">
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field type="xml" name="arch">
            <xpath expr="//group[1]" position="inside">
                <group name="end_of_lot" string="End Of Lot" attrs="{'invisible': [('code', '=', 'incoming')]}">
                    <field name="end_lot_location_id"/>
                    <field name="end_lot_picking_type_id" attrs="{'required': [('end_lot_location_id', '!=', False)], 'invisible': [('end_lot_location_id', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
